<div class="card bg-white shadow-lg rounded-lg overflow-hidden p-8 w-full sm:w-80 md:w-96 lg:w-1/4">
  <div class="card-body">
    <h2 class="card-title text-xl font-bold mb-6 text-center">
      <%= link_to program.title, program_path(program), class: "text-blue-500 hover:underline" %>
    </h2>
    <p class="text-gray-600 mb-4 text-center">
      <strong>パーソナリティ名 :</strong> <%= program.host_name %>
    </p>
    <p class="text-gray-600 mb-4 text-center">
      <strong>放送局 :</strong> <%= program.channel %>
    </p>
    <p class="text-gray-600 mb-4 text-center">
      <strong>放送日時 :</strong> <%= program.day_of_week %>
    </p>
    <p class="text-gray-600 mb-4 text-center">
      <strong>放送開始時刻 :</strong> <%= program.start_time.strftime("%H:%M") %>
    </p>
    <p class="text-gray-600 mb-4 text-center">
      <strong>放送終了時刻 :</strong> <%= program.end_time.strftime("%H:%M") %>
    </p>
  </div>
</div>
