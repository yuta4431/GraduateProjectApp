<h1>番組メモ登録</h1>
<%= form_with model: @host do |f| %>
  <div class='field'>
    <%= f.label :パーソナリティ名, class: "form-label" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :放送局, class: "form-label" %>
    <%= f.text_field :channel, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :放送日時, class: "form-label" %>
    <%= f.datetime_select :date_and_time, class: 'form-control' %>
  </div>
  <div class='actions'>
   <%= f.submit :登録,  class: 'btn btn-primary' %>
  </div>
<% end %>
