<div class="card bg-white shadow-lg rounded-lg overflow-hidden p-8 w-full sm:w-80 md:w-96 lg:w-1/4">
  <div class="card-body">
    <h2 class="card-title text-xl font-bold mb-4 text-center">
      <%= link_to post.title, post_path(post), class: "text-blue-500 hover:underline" %>
    </h2>
    <p class="text-gray-600 mb-4">
      <strong>放送日時:</strong> <%= post.broadcast_date.strftime("%Y-%m-%d") %>
    </p>
    <p class="text-gray-700">
      <strong>放送内容・感想など:</strong> <%= truncate(post.content, length: 100) %>
    </p>
  </div>
</div>
