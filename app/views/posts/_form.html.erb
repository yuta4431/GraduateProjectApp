<%= form_with model: @post do |f| %>
  <div class='field'>
    <%= f.label "番組名", class: "form-label" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='field'>
    <%= f.label "放送日時", class: "form-label" %>
    <%= f.date_select :broadcast_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label "放送内容・感想など" , class: "form-label" %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="field">
    <div class="flex justify-center">
    <%= f.submit "投稿", class: 'bg-orange-500 hover:bg-orange-600 text-white py-2 px-4 rounded' %>
    </div>
  </div>
<% end %>
