<div class="w-full flex items-center justify-center">
  <div class="w-full max-w-xl mx-auto">
    <h2 class="text-3xl font-bold mb-6 text-center">新規登録</h2>
    <%= form_with model: @user do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="mb-6">
        <div class="mb-4">
          <%= f.label :name, "ユーザー名", class: "form-label" %>
          <%= f.text_field :name, class: "input input-bordered w-full max-w-xl" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, class: "input input-bordered w-full max-w-xl" %>
        </div>
        <div class="mb-5">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered w-full max-w-xl mb-6" %>
        </div>
      </div>
      <div class="flex justify-center mb-6">
        <%= f.submit '登録', class: 'btn bg-orange-500 hover:bg-orange-600 text-white' %>
      </div>
      <div class="mt-4 text-center">
        <%= link_to 'ユーザー登録済みの方はこちら', login_path, class: "link link-primary" %>
      </div>
    <% end %>
  </div>
</body>