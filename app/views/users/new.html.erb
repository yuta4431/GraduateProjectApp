<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ユーザー作成</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body class="w-full min-h-screen flex items-center justify-center">
  <div class="w-full max-w-xl mx-auto">
    <h2 class="text-3xl font-bold mb-6 text-center">新規登録</h2>
    <%= form_with url: login_path, method: :post, local: true do |f| %>
      <label class="form-control w-full max-w-xl">
        <div class="label">
          <span class="label-text">ユーザー名</span>
        </div>
        <input type="text" class="input input-bordered w-full max-w-xl" />
        <div class="label">
          <span class="label-text">パスワード</span>
        </div>
        <input type="password" class="input input-bordered w-full max-w-xl" />
      </label>
      <div class="label">
          <span class="label-text">パスワード確認</span>
        </div>
        <input type="password" name="password_confirmation" class="input input-bordered w-full max-w-xl mb-6" />
      </label>
      <div class="flex justify-center mb-6">
        <button class="btn bg-orange-500 hover:bg-orange-600 text-white">登録</button>
      </div>
      <div class="mt-4 text-center">
        <%= link_to 'ユーザー登録済みの方はこちら', login_path, class: "link link-primary" %>
      </div>
    <% end %>
  </div>
</body>
