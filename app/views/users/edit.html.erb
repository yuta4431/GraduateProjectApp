<div class="w-full flex items-center justify-center">
  <div class="w-full max-w-xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-center">ユーザー名変更</h1>
    <%= form_with model: @user do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="mb-6">
        <div class="mb-4">
          <%= f.label :name, "ユーザー名", class: "form-label" %>
          <%= f.text_field :name, class: "input input-bordered w-full max-w-xl" %>
        </div>
        <div class="flex justify-center">
          <%= f.submit "更新", class: 'bg-orange-500 hover:bg-orange-600 text-white py-2 px-4 rounded' %>
        </div>
      </div>
    <% end %>
  </div>
</div>